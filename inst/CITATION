citHeader("To cite spiro in publications use:")

version <- meta$Version
note <- sprintf("R package version %s", version)

citEntry(
  entry    = "Manual",
  title    = "spiro: Manage Data from Cardiopulmonary Exercise Testing",
  author   = person("Simon", "Nolte"),
  year     = "2021",
  url      = "https://smnnlt.github.io/spiro/",
  note     = note,
  textVersion = paste0(
    "Simon Nolte (2021). ",
    "spiro: Manage Data from Cardiopulmonary Exercise Testing. ",
    "R package version ", version, ". ",
    "https://smnnlt.github.io/spiro/"
  )
)
